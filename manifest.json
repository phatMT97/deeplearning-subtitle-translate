{
    "manifest_version": 3,
    "name": "Coursera Subtitle Translator",
    "description": "Coursera Subtitle Translator",
    "version": "1.0.0",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon.png",
            "128": "icons/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://www.coursera.org/*",
                "*://learn.deeplearning.ai/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://www.coursera.org/*",
        "*://learn.deeplearning.ai/*"
    ]
}